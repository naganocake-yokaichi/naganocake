<div class="container">
 <h3 class="row mt-3 mb-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
<label>会員ID</label>
<%= @customer.id %>
<%= form_with(model: @customer,url:admin_customer_path, method: :patch,local:true) do |f| %>
<div class="row mb-3">
      <div class="field">
<%= f.label :'氏名' %>
<%= f.text_field :last_name %>
<%= f.text_field :first_name %>
    </div>
    </div>
<div class="row mb-3">
      <div class="field">
<%= f.label :'フリガナ' %>
<%= f.text_field :last_name_kana %>
<%= f.text_field :first_name_kana %>
    </div>
    </div>
<div class="row mb-3">
      <div class="field">
<%= f.label :'郵便番号' %>
<%= f.text_field :postcode %>
    </div>
    </div>
<div class="row mb-3">
      <div class="field">
<%= f.label :'住所' %>
<%= f.text_field :address %>
    </div>
    </div>
<div class="row mb-3">
      <div class="field">
<%= f.label :'電話番号' %>
<%= f.text_field :phone_number %>
    </div>
    </div>
<div class="row mb-3">
      <div class="field">
<%= f.label :'メールアドレス' %>
<%= f.text_field :email %>
    </div>
    </div>
<div class="row mb-3">
      <div class="field">
<%= f.label :'会員ステータス' %>
<%= f.label :'有効' %>
<%= f.radio_button :is_deleted, false %>
<%= f.label :'退会'%>
<%= f.radio_button :is_deleted, true %>
    </div>
    </div>

<%= f.submit '変更を保存', class: 'btn btn-success'%>
<% end %>
</div>