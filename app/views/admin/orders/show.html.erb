<h1>注文履歴詳細</h1>
  <h4>購入者</h4>
   <%= @order.name %>
  <h4>注文日</h4>
   <%= @order.created_at.strftime('%Y/%m/%d') %>
  <h4>配送先</h4>
   〒<%= @order.postcode %>
     <%= @order.address %>
     <%= @order.name %>
  <h4>支払方法</h4>
   <%= @order.pay_method %>
  <h4>注文ステータス</h4>
   <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local:true do |f| %>
   <%= f.select :status, Order.statuses.keys.to_a %>
   <%= f.submit '更新', class: "btn btn-success" %>
   <% end %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @order.order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.name %></td>
        <td><%= (order_detail.price * 1.1).to_i %></td>
        <td><%= order_detail.amount %></td>
        <td><%= subtotal = ((order_detail.price*order_detail.amount)*1.1).to_i %></td>
        <td><%= form_with model: @order, url: admin_order_path(@order), method: :patch, local:true do |f| %>
            <%= f.select :make_status, Order_details.make_statuses.keys.to_a %>
            <%= f.submit '更新', class: "btn btn-success" %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table></br>

<table>
  <tr>
    <td>商品合計</td>
    <td><%= (@order.total_payment - @order.carriage) %></td>
  </tr>

  <tr>
    <td>送料</td>
    <td><%= @order.carriage %></td>
  </tr>

  <tr>
    <td>請求金額合計</td>
    <td><%= @order.total_payment %></td>
  </tr>
</table></br>

