<div class="mt-5">
  <div class="container">
    <div class="row pb-5">
      <h2><strong>商品一覧</strong></h2><h4>(全<%= @items.count %>件)</h4>
    </div>
         <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
           <div class="mr-3">
            <%= link_to (attachment_image_tag item, :image, format: 'jpeg', fallback: 'no_image.jpg', size: "200x100"), item_path(item.id) %>
            <p><strong><%= item.name %></strong></p>
            <p><strong>￥<%= item.price %></strong></p>
           </div>
          <% end %>
  </div>
</div>