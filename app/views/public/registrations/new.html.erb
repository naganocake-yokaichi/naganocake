<div class="container">
  <h3 class="row mt-3 mb-4">新規会員登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row mb-3">
      <div class="field">
        <label>姓</label>
        <%= f.text_field :last_name, autofocus: true %>
        <label>名</label>
        <%= f.text_field :first_name, autofocus: true %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="field">
        <label>セイ</label>
        <%= f.text_field :last_name_kana, autofocus: true %>
        <label>メイ</label>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="field">
        <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postcode, autofocus: true %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="field">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, autofocus: true %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="field">
        <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
        <%= f.text_field :phone_number, autofocus: true %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mb-4">
      <button type="submit" class="btn btn-primary">新規登録</button>
    </div>


  <% end %>

    <div class="row">
      <div class="actions">
        <h4>既に登録済みの方</h4>
        <p><%= render "public/shared/links" %>からログインしてください。</p>
      </div>
    </div>

</div>