<div class="container">
  <h3 class="row mt-3 mb-4">新規会員登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


      <div class="field">
        <%= f.label :名前,class:"col-3 mb-4"%>

       (姓)<%= f.text_field :last_name,class:"col-3", autofocus: true %>
       (名)<%= f.text_field :first_name,class:"col-3", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :フリガナ,class:"col-3 mb-4" %>

        (セイ)<%= f.text_field :last_name_kana,class:"col-3", autofocus: true %>

        (メイ)<%= f.text_field :first_name_kana,class:"col-3", autofocus: true %>
      </div>



      <div class="field">
        <%= f.label :email, "メールアドレス",class:"col-3 mb-4" %>
        <%= f.email_field :email,class:"col-3", autofocus: true, autocomplete: "email" %>
      </div>


      <div class="field">
        <%= f.label :postcode, "郵便番号(ハイフンなし)",class:"col-3 mb-4" %>
        <%= f.text_field :postcode,class:"col-3", autofocus: true %>
      </div>



      <div class="field">
        <%= f.label :address, "住所",class:"col-3 mb-4"%>
        <%= f.text_field :address,class:"col-7", autofocus: true %>
      </div>



      <div class="field">
        <%= f.label :phone_number, "電話番号(ハイフンなし)",class:"col-3 mb-4" %>
        <%= f.text_field :phone_number, class:"col-3",autofocus: true %>
      </div>


      <div class="field">
        <%= f.label :password, "パスワード",class:"col-3 mb-4" %>
        <%= f.password_field :password,class:"col-3", autocomplete: "new-password" %>
         <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>



      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)",class:"col-3 mb-4" %>
        <%= f.password_field :password_confirmation, class:"col-3", autocomplete: "new-password" %>
      </div>


    <div class="col-3 mb-4 ">
      <button type="submit" class="btn btn-success">新規登録</button>
    </div>


  <% end %>

    <div class="row">
      <div class="actions">
        <h4>既に登録済みの方</h4>
        <p><%= render "public/shared/links" %>からログインしてください。</p>
      </div>
    </div>

</div>