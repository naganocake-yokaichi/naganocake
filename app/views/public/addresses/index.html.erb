<container>
    
    <h1>配送先登録/一覧</h1>
        <row>
            <%= form_with model:@address, local:true do |f| %>

              <h4>郵便</h4>
              <%= f.text_field :postcode %>
            
              <h4>住所</h4>
              <%= f.text_field :address %>
            
              <h4>宛名</h4>
              <%= f.text_field :name %>
            
              <%= f.submit '新規登録' %>
            
            <% end %>
            
        </row>

        <row>
        
        <thead>
            <tr>
                <th>郵便番号<th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @addresses.each do |address| %>
            <tr>
                <td><%= address.postcode %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td></td>
            </tr>
        </tbody>
        
        <% end %>
        </row>





</container>