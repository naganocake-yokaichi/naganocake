<container>
      <div class ="row my-2 ml-5">
        <% if @address.errors.any? %>
        <%= @address.errors.count %>件のエラーが発生しました。<br>
                <% @address.errors.full_messages.each do |message| %>
                    <%= message %>
                <% end %>
        <% end %>
      </div>


　      <div class="row">
            <div class="col-md-12 my-2 ml-5">
            <h2>配送先登録/一覧</h2>
            </div>
        </div>
        <div class="row ml-5">
            <%= form_with model:@address, local:true do |f| %>

              <h5>郵便番号（ハイフンなし）</h5>
              <%= f.text_field :postcode %>

              <h5>住所</h5>
              <%= f.text_field :address %>

              <h5>宛名</h5>
              <%= f.text_field :name %>

              <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>

            <% end %>

        </div>

        <div class="row mt-5">
        <table class="table fixed ml-4">

        <thead>
            <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% @addresses.each do |address| %>

            <tr>
                <td><%= address.postcode %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                    <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success" %>
                    <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
                </td>
            </tr>
            <% end %>
        </tbody>
        </table>
        </div>
</container>