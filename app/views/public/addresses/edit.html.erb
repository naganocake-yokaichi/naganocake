<h1>配送先編集<h1>
    
        <row>
            <%= form_with model:@address, local:true do |f| %>

              <h4>郵便</h4>
              <%= f.text_field :postcode %>
            
              <h4>住所</h4>
              <%= f.text_field :address %>
            
              <h4>宛名</h4>
              <%= f.text_field :name %>
            
              <%= f.submit '変更内容を保存' %>
            
            <% end %>
            
        </row>