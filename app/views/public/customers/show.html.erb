<div class = 'container'>
  <h3 class="row mt-4 mb-4">マイページ</h3>
  <div class = 'row'>
    <div class = 'col-md-10'>
      <strong class = 'mt-2'>登録情報</strong>
      <%= link_to '編集する',edit_customers_path, class: 'btn btn-success ml-4 mb-2' %></div>
      <table class = 'table table-bordered table-condensed'>
        <tr>
          <td class='col-3'>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %> </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postcode%></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <table class = 'table table-borderless'>
        <thead>
          <tr>
            <th class='col-1'><strong>配送先</strong></th>
            <td><%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary' %></td>
    　  　　</tr>
          <tr>
          <th class='col-1'> <strong>注文履歴</strong></th><td><%= link_to '一覧を見る', orders_path(@customer), class: 'btn btn-primary' %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>